@using CV.Models.Entity
@model List<Kimlik>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta chars et="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Erkan Bostan</title>
    <link rel="icon" type="image/x-icon" href="~/CV/assets/img/favicon.png" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/CV/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-warning fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            @foreach (var item in Model)
            {
                <span class="d-block d-lg-none">@item.Ad @item.Soyad</span>
                <span class="d-none d-lg-block"><img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="~/CV/assets/img/@item.Resim" width="200" alt="" /></span>
            }
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#about">About Me</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#experience">My Experiences</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#education">My Education Life</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#skills">My Skills</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#interests">My Hobbies</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#awards">My Certificates</a></li>
                <li class="nav-item"><a class="nav-link js-scroll-trigger" href="#projects">My Projects</a></li>
            </ul>
        </div>
    </nav>
    <!-- Page Content-->
    <div class="container-fluid p-0">
        <!-- About-->
        @foreach (var x in Model)
        {
            <section class="resume-section" id="about">
                <div class="resume-section-content">
                    <h1 class="mb-0">
                        <span class="text-info"> @x.Ad</span>
                        <span class="text-danger ">@x.Soyad</span>
                    </h1>
                    <div class="subheading mb-5">
                        @x.Adres / @x.Telefon /
                        <a class="text-danger">@x.Mail</a>
                    </div>
                    <p class="lead mb-5">@x.Aciklama</p>
                    <div class="social-icons">
                        <a class="social-icon" href="https://www.linkedin.com/in/erkan-bostan-11257a210/" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                        <a class="social-icon" href="https://github.com/erkanbstn" target="_blank"><i class="fab fa-github"></i></a>
                        <a class="social-icon" href="https://www.instagram.com/erkanbssn/" target="_blank"><i class="fab fa-instagram"></i></a>
                        <a class="social-icon" href="https://www.facebook.com/erkanbstn" target="_blank"><i class="fab fa-facebook-f"></i></a>
                    </div>
                </div>

            </section>
        }
        <hr class="m-0" />
        <!-- Experience-->
        <section class="resume-section" id="experience">
            @Html.Action("Deneyim")
        </section>
        <hr class="m-0" />
        <!-- Education-->

        <section class="resume-section" id="education">
            @Html.Action("Egitim")
        </section>
        <hr class="m-0" />
        <!-- Skills-->

        <section class="resume-section" id="skills">
            @Html.Action("Yetenek")
        </section>
        <hr class="m-0" />
        <!-- Interests-->
        <section class="resume-section" id="interests">
            @Html.Action("Hobi")
        </section>
        <hr class="m-0" />
        <!-- Awards-->
        <section class="resume-section" id="awards">
            @Html.Action("Sertifika")
        </section>
        <hr class="m-0" />
        <!-- Awards-->
        <section class="resume-section" id="projects">
            @Html.Action("Proje")
        </section>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <!-- Core theme JS-->
    <script src="/CV/js/scripts.js"></script>
</body>
</html>

