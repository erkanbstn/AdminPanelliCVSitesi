
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>CV Giriş</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Erkan Bostan,CV,Öz Geçmiş, Erkan, Bostan, Erkan Bostan Kimdir" />
    <link href="~/Login5/css/style.css" rel="stylesheet" type="text/css" />
    <link href="~/Login5/css/fontawesome-all.css" rel="stylesheet" />
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/CV/assets/img/favicon.png" />
</head>


<body>
    <h1>CV Admin Girişi</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Yap</h2>
        <form action="~/Yonetim/YonetimGiris" method="post">
            <div class=" w3l-form-group">
                <label>Kullanıcı Adı</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" name="Kullanici" placeholder="Kullanıcı Adı" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" name="Sifre" placeholder="Şifre" required="required" />
                </div>
            </div>
            <button type="submit">Giriş Yap</button>
        </form>
    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; 2020 CV Giriş Ekranı. Tüm Hakları Saklıdır | Design by <a href="https://www.linkedin.com/in/erkan-bostan-11257a210/">Erkan Bostan</a></p>
    </footer>

</body>

</html>
